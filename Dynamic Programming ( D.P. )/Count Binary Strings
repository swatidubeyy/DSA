//************************************ solution no 1************************************

import java.io.*;
import java.util.*;

public class Main{

public static void main(String[] args) throws Exception {
    
    Scanner scn = new Scanner(System.in);
    int n = scn.nextInt();

    int dp0[] = new int[n+1];
    int dp1[] = new int[n+1];

    dp0[1] = 1;
    dp1[1] = 1;

    for(int i = 2 ; i <= n ; i++){
        dp0[i] = dp1[i-1];
        dp1[i] = dp0[i-1] + dp1[i-1];
    }

    System.out.println(dp0[n] + dp1[n]);

 }

}



//************************************ solution no 2************************************

import java.io.*;
import java.util.*;

public class Main{

public static void main(String[] args) throws Exception {
    
    Scanner scn = new Scanner(System.in);
    int n = scn.nextInt();

    int OldCount0 = 1;
    int OldCount1 = 1;

    for(int i = 2 ; i <= n ; i++){
        int NewCount0 = OldCount1;
        int NewCount1 = OldCount1 + OldCount0;

        OldCount0 = NewCount0;
        OldCount1 = NewCount1 ;
    }

    System.out.println(OldCount1 + OldCount0);

 }

}
